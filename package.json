{
  "name": "node-html2img-render-server",
  "version": "1.1.0",
  "description": "A server for converting HTML to images with Playwright - allows direct HTML input and returns screenshots for visual testing",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/walterra/node-html2img-render-server"
  },
  "bin": {
    "node-html2img-server": "./bin/html2img.js"
  },
  "scripts": {
    "start": "node --env-file=./.env -r @elastic/opentelemetry-node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "html",
    "rendering",
    "screenshot",
    "visual",
    "regression",
    "testing",
    "cli",
    "npx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elastic/opentelemetry-node": "^1.0.0",
    "body-parser": "^1.20.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "open": "^9.1.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.2.0",
    "nodemon": "^3.0.2",
    "pngjs": "^7.0.0",
    "prettier": "^3.5.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
